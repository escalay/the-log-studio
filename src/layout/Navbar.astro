---
interface Props {
  active?: 'collection' | 'system' | 'journal' | 'admin'
}

const { active = 'collection' } = Astro.props
---

<nav class="border-b border-ink bg-paper sticky top-0 z-50 flex items-center justify-between px-4 md:px-6 h-14">
  <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
    <div class="w-3 h-3 bg-accent rounded-full animate-pulse"></div>
    <span class="font-mono text-xs font-bold uppercase tracking-widest hidden md:inline">The Log Studio_</span>
    <span class="font-mono text-xs font-bold uppercase tracking-widest md:hidden">TLS_</span>
  </a>

  <div class="flex h-full">
    <a
      href="/"
      onclick="window.posthog?.capture('nav_clicked',{destination:'collection'})"
      class:list={[
        'px-4 md:px-6 h-full font-mono text-xs uppercase hover:bg-ink hover:text-white transition-colors flex items-center',
        { 'bg-ink text-white': active === 'collection' },
      ]}
    >
      Collection
    </a>
    <a
      href="/system"
      onclick="window.posthog?.capture('nav_clicked',{destination:'system'})"
      class:list={[
        'px-4 md:px-6 h-full font-mono text-xs uppercase border-l border-ink hover:bg-ink hover:text-white transition-colors flex items-center',
        { 'bg-ink text-white': active === 'system' },
      ]}
    >
      System
    </a>
    <a
      href="/journal"
      onclick="window.posthog?.capture('nav_clicked',{destination:'journal'})"
      class:list={[
        'px-4 md:px-6 h-full font-mono text-xs uppercase border-l border-ink hover:bg-ink hover:text-white transition-colors flex items-center gap-2',
        { 'bg-ink text-white': active === 'journal' },
      ]}
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-3 h-3"><path d="M4 22h16a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v16a2 2 0 0 1-2 2Zm0 0a2 2 0 0 1-2-2v-9c0-1.1.9-2 2-2h2"></path><path d="M18 14h-8"></path><path d="M15 18h-5"></path><path d="M10 6h8v4h-8V6Z"></path></svg>
      <span class="hidden md:inline">The Register</span>
      <span class="md:hidden">Log</span>
    </a>
  </div>
</nav>
