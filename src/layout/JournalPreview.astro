---
import { ArrowLeft, JournalIcon } from '@/ui/Icons'
import { createDb } from '@/db'
import { journalEntries, journalBlocks } from '../../drizzle/schema'
import { eq, asc } from 'drizzle-orm'
import { BarChart } from '@/journal/custom/CustomComponents'

const db = createDb(Astro.locals.runtime.env.DB)

let posts: any[] = []
let teaserProps: any = null
let teaserComponent: string | null = null

try {
  posts = await db.select().from(journalEntries)

  // Try to find a component block from the latest post for the teaser
  if (posts.length > 0) {
    const blocks = await db
      .select()
      .from(journalBlocks)
      .where(eq(journalBlocks.journalEntryId, posts[0].id))
      .orderBy(asc(journalBlocks.sortOrder))

    const componentBlock = blocks.find((b) => b.type === 'component')
    if (componentBlock) {
      try {
        teaserProps = JSON.parse(componentBlock.content)
        teaserComponent = componentBlock.componentName
      } catch {}
    }
  }
} catch {
  // DB not available — section renders empty state
}

const latest = posts[0]
const others = posts.slice(1, 4)
---

{posts.length > 0 ? (
  <section class="border-t-4 border-ink bg-level-0 relative overflow-hidden">
    <div class="absolute inset-0 bg-dot-grid opacity-40 pointer-events-none"></div>
    <div class="absolute top-0 right-0 w-64 h-64 bg-accent/5 rounded-full blur-3xl"></div>

    <div class="container mx-auto max-w-7xl border-x border-ink">
      <!-- Header -->
      <div class="border-b border-ink p-6 md:p-8 flex flex-col md:flex-row justify-between items-baseline gap-4">
        <div class="flex items-center gap-4">
          <div class="w-4 h-4 bg-ink animate-pulse"></div>
          <h2 class="font-serif text-3xl md:text-5xl italic">From The Register</h2>
        </div>
        <a
          href="/journal"
          onclick="window.posthog?.capture('journal_archive_clicked')"
          class="font-mono text-xs font-bold uppercase tracking-widest hover:text-accent transition-colors flex items-center gap-2 group"
        >
          View Full Archive
          <svg class="w-4 h-4 rotate-180 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 12H5M12 19l-7-7 7-7" />
          </svg>
        </a>
      </div>

      <div class="grid md:grid-cols-12 min-h-[500px]">
        <!-- Main Feature (Latest) -->
        <a href={`/journal/${latest.slug}`} onclick={`window.posthog?.capture('journal_preview_clicked',{post_slug:'${latest.slug}',section:'featured'})`} class="md:col-span-8 border-b md:border-b-0 md:border-r border-ink p-8 md:p-12 relative group block">
          <div class="absolute top-0 right-0 bg-ink text-white px-3 py-1 font-mono text-xs font-bold uppercase">
            Latest Issue
          </div>

          <div class="flex flex-col h-full">
            <div class="font-mono text-xs text-subtle uppercase tracking-widest mb-6">
              {latest.quarter} — {latest.date}
            </div>

            <h3 class="font-serif text-5xl md:text-7xl leading-[0.9] mb-8 group-hover:text-accent transition-colors">
              {latest.title}
            </h3>

            <div class="grid md:grid-cols-2 gap-8 mb-8">
              <p class="font-sans text-lg text-ink/80 leading-relaxed">
                {latest.subtitle}
              </p>
              {teaserComponent === 'BarChart' && teaserProps && (
                <div class="hidden md:block border border-ink bg-white p-2 shadow-sm rotate-2 group-hover:rotate-0 transition-transform duration-500">
                  <div class="font-mono text-[9px] uppercase border-b border-ink/10 mb-2 pb-1 text-subtle">Fig 1. Data Preview</div>
                  <div class="transform scale-90 origin-top-left pointer-events-none">
                    <BarChart {...teaserProps} client:idle />
                  </div>
                </div>
              )}
            </div>

            <div class="mt-auto pt-8 flex items-center gap-2 font-mono text-xs font-bold uppercase text-accent">
              Read Deep Dive <div class="h-[1px] w-8 bg-accent"></div>
            </div>
          </div>
        </a>

        <!-- Sidebar (Previous) -->
        <div class="md:col-span-4 bg-white flex flex-col">
          <div class="p-4 border-b border-ink bg-diagonal-stripes">
            <span class="font-mono text-[10px] uppercase font-bold bg-white px-2 py-0.5 border border-ink shadow-sm">
              Previously
            </span>
          </div>

          {others.length > 0 ? (
            <div class="divide-y divide-ink">
              {others.map((post) => (
                <a
                  href={`/journal/${post.slug}`}
                  onclick={`window.posthog?.capture('journal_preview_clicked',{post_slug:'${post.slug}',section:'sidebar'})`}
                  class="block p-6 md:p-8 hover:bg-level-0 transition-colors group"
                >
                  <div class="font-mono text-[10px] text-subtle mb-2">{post.date}</div>
                  <h4 class="font-serif text-2xl leading-tight mb-2 group-hover:underline decoration-accent underline-offset-4">
                    {post.title}
                  </h4>
                  <div class="text-xs font-mono text-subtle uppercase">
                    {post.readTime}
                  </div>
                </a>
              ))}
            </div>
          ) : (
            <div class="p-12 text-center text-subtle font-mono text-xs">
              Archive is empty.
            </div>
          )}

          <div class="p-6 md:p-8 bg-ink text-white flex-1 flex flex-col justify-center items-center text-center mt-auto">
            <JournalIcon className="w-12 h-12 mb-4 opacity-50" />
            <h4 class="font-serif text-2xl italic mb-2">Subscribe to RSS</h4>
            <p class="font-sans text-white/60 text-xs mb-4">Get raw updates when they ship.</p>
            <div class="flex w-full gap-2">
              <input type="email" placeholder="email@address.com" class="bg-white/10 border border-white/20 px-3 py-2 text-xs font-mono w-full text-white placeholder:text-white/30 focus:outline-none focus:border-accent" />
              <button class="bg-white text-ink px-3 py-2 font-bold font-mono text-xs hover:bg-accent hover:text-white transition-colors">
                →
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
) : (
  <section class="border-t-4 border-ink bg-level-0 relative overflow-hidden">
    <div class="absolute inset-0 bg-dot-grid opacity-20 pointer-events-none"></div>
    <div class="container mx-auto max-w-7xl border-x border-ink">
      <div class="border-b border-ink p-6 md:p-8 flex items-center gap-4">
        <div class="w-4 h-4 bg-ink/20"></div>
        <h2 class="font-serif text-3xl md:text-5xl italic text-subtle">From The Register</h2>
      </div>
      <div class="py-24 flex flex-col items-center justify-center text-center px-6">
        <div class="w-20 h-20 border-2 border-dashed border-ink/15 rounded-full flex items-center justify-center mb-8">
          <JournalIcon className="w-8 h-8 text-ink/20" />
        </div>
        <p class="font-serif text-3xl italic text-ink/40 mb-3">The register awaits its first entry</p>
        <p class="font-mono text-xs text-ink/25 uppercase tracking-widest max-w-sm leading-relaxed">
          Deep dives, build logs, and lessons learned will appear here as the studio produces work.
        </p>
      </div>
    </div>
  </section>
)}
